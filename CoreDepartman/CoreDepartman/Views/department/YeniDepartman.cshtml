@model departmanlar
@{
    ViewData["Title"] = "YeniDepartman";
    Layout = "~/Views/Shared/_supLayout.cshtml";
}
<br />
<br />
<h3 style="text-align:center;color:green;">DEPARTMAN EKLEME SAYFASI</h3>
<br />

<form class="card-form container" method="post" >
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardID" style="font-weight: bold;">Departman Adı</label>
        <input type="text" class="form-control" asp-for="departmanAd" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
    </div>    
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardID" style="font-weight: bold;">Departman Açıklama</label>
        <textarea type="text" class="form-control" asp-for="Aciklama" style="width: 100%;height:150px; padding: 10px; border: 1px solid #ccc; border-radius: 5px;"></textarea>
    </div>


    <div class="form-group" style="margin-top: 15px;">
        <button type="submit" class="btn btn-success" style="padding: 10px 20px; border: none; border-radius: 5px; color: #fff; cursor: pointer;"> EKLE</button>
    </div>
</form>